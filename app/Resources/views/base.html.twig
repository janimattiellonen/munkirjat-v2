            '@MunKirjatMainBundle/Resources/coffee/view/menu/Menu.coffee'
            'bundles/fosjsrouting/js/router.js'
            'js/fos_js_routes.js'
            '@MunKirjatMainBundle/Resources/coffee/Utils.coffee'
